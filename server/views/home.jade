div.hero-unit
  h1=config.name
  p=config.description
  - if (everyauth.loggedIn)
    a(class="btn btn-primary btn-large",href="/logout") Sign off
  - else
    a(class="btn btn-primary btn-large",href="/auth/facebook") Login via Facebook
div.row
  div(class="span4 columns")
  div(class="span8 columns")
    div(id="myCarousel",class="carousel slide")
      div(class="carousel-inner")
      a(class="carousel-control left",href="#myCarousel",data-slide="prev")&lsaquo;
      a(class="carousel-control right",href="#myCarousel",data-slide="next")&rsaquo;